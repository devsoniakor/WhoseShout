<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding"
    android:id="@+id/treat_dialog_container"
    tools:context="com.mad.whosetreat.dialog.TreatConfirmDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/treatConfTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Do you confirm?"
            android:textSize="15sp" />


        <TableLayout
            android:id="@+id/treatGroupTableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/treatConfTv"
            android:paddingBottom="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/member"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="right"
                    android:text="@string/treats"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</FrameLayout>
